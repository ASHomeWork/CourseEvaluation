<div id="login">
<br><br>
<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<% provide(:title, "登录") %>
<h1>登录</h1>
<br>
    <%= form_for(:session, url: login_path) do |f| %>
    <div class="field">
      <%= f.label :email , "邮箱:" %>
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :password, "密码:" %>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <div class="checkbox">
        <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        <span class="auto_login">下次自动登录     </span>
      </div>
      <% end %>
    </div>
    <div class="field">
      <div class="btn">
      <%= f.submit "登录", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

    <p><%= link_to "注册", new_user_path %></p>
    <br>

<%= link_to '返回首页', '/' %>
</div>