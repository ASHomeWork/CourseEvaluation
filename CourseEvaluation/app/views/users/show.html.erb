<% provide(:title, @user.user_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag("pic1.jpg") %>
        <%= @user.user_name %>
      </h1>
    </section>
  </aside>
</div>

<p id="notice"><%= notice %></p>

<p>
  <strong>用户名:</strong>
  <%= @user.user_name %>
</p>

<p>
  <strong>邮箱:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>用户权限:</strong>
  <%= "用户" if @user.power==1 %>
  <%= "管理员" if @user.power==2 %>
</p>

<p>
  <strong>性别:</strong>
  <%= "男" if @user.gender_id==1 %>
  <%= "女" if @user.gender_id==2 %>
</p>
<% if @user.power == 2 %>
  <%= link_to "查看所有用户资料",   users_url %>
<% end %>
<%= link_to '注销用户', @user, method: :delete, data: { confirm: '确定删除?' } %>
<%= link_to '修改个人资料', edit_user_path(@user) %> |
<%= link_to '退出登录', '/logout' %>
