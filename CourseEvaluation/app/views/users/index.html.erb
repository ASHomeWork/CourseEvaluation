<p id="notice"><%= notice %></p>

<h1>用户资料页</h1>
<table class="table table-hover" id="course_table" data-card-view="true">
  <thead>
    <tr>
      <th>用户名</th>
      <th>邮箱</th>
      <th>用户权限</th>
      <th>性别</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td><%= user.email %></td>
        <% if user.power == 1 %>
          <td><%= "普通用户" %></td>
        <% else %>
          <td><%= "管理员" %></td>
        <% end %>
        <% if user.gender_id == 1%>
          <td><%= "男" %></td>
        <% else %>
          <td><%= "女" %></td>
        <% end %>
        <td><%= link_to '用户资料页', user %></td>
        <td><%= link_to '编辑', edit_user_path(user) %></td>
        <%-# if user.power == 1 #%>
          <td><%= link_to '删除', user, method: :delete, data: { confirm: '确定删除?' } %></td>
        <%-# end #%>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>

