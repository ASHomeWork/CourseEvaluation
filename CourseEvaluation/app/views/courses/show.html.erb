<p id="notice"><%= notice %></p>

<% @can=""%>
<% if !current_user.nil? %>
	<% @can="myModal"%>
<% end %>
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<% if current_user.nil? %>
						<div class="modal-body">请您先登陆</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
						</div>
					<%else%>
						<div class="modal-body">可以回复</div>
						
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
						</div>
					<% end %>
				</div><!-- /.modal-content -->
	</div><!-- /.modal -->
	</div>
<div class="wrap">
<aside id="left">
<div class="mii-page">
    <h1>课程详情<br />
    <small>Course Detail</small></h1>
    <div class="mii-container">
        <div class="mii-container-top">
            <img src="/assets/ucas.png" class="flag">
            <span class="mii-gold-stars">
			<span class="mii-gold-star first"></span>
			<span class="mii-gold-star second"></span>
            <span class="mii-gold-star third"></span>
			<span class="mii-gold-star fourth"></span>
			<span class="mii-gold-star fifth"></span>
        	</span>
		</div>
		<div class="mii-container-bottom">
				<span class="mii-name">
				<strong>Name:</strong>
				<%= @course.name %>
				</p>
				</span>
				<p>
				<strong>Major:</strong>
				<%= @course.major.name %>
				</p>

				<p>
				<strong>Year:</strong>
				<%= @course.year %>
				</p>

				<%= link_to 'Edit', edit_course_path(@course) %> |
				<%= link_to 'Back', courses_path %>
		</div>
    </div>
</div>

</aside>

<section id="right">
<div class="comments-container">
    <h1>评一评</h1>

    <ul id="comments-list" class="comments-list">
        <li>
            
					<% if !@comment.nil? %>
						<% @comment.each do |comment| %>
							<!-- 这里是楼主 -->
							<div class="comment-main-level">
								<div class="comment-avatar"><img src="/assets/girl<%=comment.user.id%>.jpeg" alt="">
								</div>
								<div class="comment-box">
									<div class="comment-head">
										<h6 class="comment-name by-author"><a href="#"><%= "用户名:"+comment.user.user_name %></a></h6>
										<i class="fa fa-reply" onclick=callModal() data-toggle="modal" data-target="#myModal">回复</i>
										<i class="fa fa-heart"></i>
									</div>
									<div class="comment-content">
										<%= comment.content%>
									</div>
								</div>
							<% @review = comment.get_reviews %>
							<% if !@review.nil? %>
								<ul class="comments-list reply-list">
									<% @review.each do |review| %>
										
               				 			<!-- 下面是回复 -->
											<li>
											<div class="comment-avatar"><img src="/assets/girl<%=review.user.id%>.jpeg" alt="">
											</div>
												<div class="comment-box">
													<div class="comment-head">
													<%if review.user == comment.user%>
														<h6 class="comment-name by-author"><a href="#"><%= "用户名:"+comment.user.user_name %></a></h6>
													<%else%>
														<h6 class="comment-name"><a href="#"><%="用户名:"+review.user.user_name%></a></h6>
													<%end%>
														<i class="fa fa-reply"><%= link_to "回复"%></i>
														<i class="fa fa-heart"></i>
													</div>
													<div class="comment-content">
														<%= review.content%>
													</div>
												</div>
											</li>
									<%end%>
								</ul>
							<%end%>
						<%end%>
					<%end%>
			</div>
		</li>
    </ul>
</div>
</section>
</div>
